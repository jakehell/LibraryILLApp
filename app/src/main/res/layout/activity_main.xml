<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main" android:id="@+id/linearLayout">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <Button
                android:text="Show Profiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/showProfiles"
        />
        <Button
                android:text="Create Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/createProfile"
        />

        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/currentProfileInfo" android:gravity="center"/>
        <FrameLayout
                android:id="@+id/createProfileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>